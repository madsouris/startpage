---
import { pwaInfo } from 'virtual:pwa-info'
import '../styles/global.css'
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <link rel="icon" type="image/svg+xml" href="/icon.png" />
        <link rel="apple-touch-icon" href="/icon.png" sizes="180x180" />
        <link rel="mask-icon" href="/icon.svg" color="#FFFFFF" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <meta
            name="theme-color"
            media="(prefers-color-scheme: light)"
            content="white"
        />
        <meta
            name="theme-color"
            media="(prefers-color-scheme: dark)"
            content="black"
        />

        <!-- Primary Meta Tags -->
        <title>Start</title>
        <meta
            name="title"
            content="Startpage - Minimal Startpage by @madsouris"
        />
        <meta
            name="description"
            content="Minimal startpage. Source code is available on Github."
        />

        <!-- Open Graph / Facebook -->
        <meta property="og:type" content="website" />
        <meta property="og:url" content="https://start.vannrith.com/" />
        <meta
            property="og:title"
            content="Startpage - Minimal Startpage by @madsouris"
        />
        <meta
            property="og:description"
            content="Minimal startpage. Source code is available on Github."
        />
        <meta property="og:image" content="/startpage.png" />

        <!-- Twitter -->
        <meta property="twitter:card" content="summary_large_image" />
        <meta property="twitter:url" content="https://start.vannrith.com/" />
        <meta
            property="twitter:title"
            content="Startpage - Minimal Startpage by @madsouris"
        />
        <meta
            property="twitter:description"
            content="Minimal startpage. Source code is available on Github."
        />
        <meta property="twitter:image" content="/startpage.png" />

        {pwaInfo && <Fragment set:html={pwaInfo.webManifest.linkTag} />}
    </head>
    <body class="bg-radial from-green-950 to-black dark">
        <slot />
    </body>
</html>
